<script>
    function startDate() {
    var today = new Date;
    var day = today.getDate();
    var days = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];  
    var months = ["January","February","March","April","May","June","July","August","September","October","November","December"];
    var date = today.getFullYear() + "-" + (today.getMonth()+1) + "-" + today.getDate();
    var time = today.getHours() + ":" + today.getMinutes + ":" + today.getSeconds();
    var dateTime = date+ " " + time;

document.getElementById("date").innerHTML = dateTime + " <br> Day :- " + days[day];    
}

</script>

<script>
  function startDate() {
    var d = new Date();
    var days = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
    var months = ["January","February","March","April","May","June","July","August","September","October","November","December"];
    document.getElementById("date").innerHTML = days[d.getDay()]+" | "+d.getDate()+" "+months[d.getMonth()]+" "+d.getFullYear();
    var time = today.getHours() + ":" + today.getMinutes + ":" + today.getSeconds();
    var dateTime = date+ " " + time;
  }
startDate();
</script>

<body onload='startDate()'>
  <div id='date'></div> <!-- use some css on #Date -->
</body>

<script>
 var today = new Date();
 var day = today.getDate();
 var daylist = ["Sunday","Monday","Tuesday","Wednesday ","Thursday","Friday","Saturday"];
var date = today.getFullYear() + "-" + (today.getMonth()+1) + "-" + today.getDate();
var time = today.getHours() + ":" + today.getMinutes + ":" + today.getSeconds();
 var dateTime = date+ " " + time;

document.getElementById("dispalyDateTime").innerHTML = dateTime + " <br> Day :- " + daylist[day];
</script>
